@using TSKApp.PL.Models
@model PersonalInfoViewModel

    <style>
        .form {
            margin: 50px auto;
            width: 700px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form__container {
            width: 275px;
            display: flex;
            flex-direction: column;
        }

        .form__title {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            margin-bottom: 40px;
            font-size: 25px;
            width: 100%;
            line-height: 90px;
            text-align: center;
            color: #fff;
            background-color: #37346b
        }


        .form-control {
            border-radius: 25px;
        }

        .form__button {
            display: inline-block;
            color: #ffffff;
            border-radius: 25px;
            font-family: Verdana;
            width: auto;
            height: auto;
            font-size: 16px;
            padding: 10px 58px;
            background: #6863ca;
            border: 0;
        }



            .form__button:hover, .form__button:active {
                color: #ffffff;
                background: #37346b;
            }

        .form__text {
            font-size: 12px;
        }

        p {
            margin-top: 10px;
            text-align: center;
        }
    </style>

    <form method="post" asp-controller="Main" asp-action="PersonalInfo">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form">
            <h2 class="form__title">TestingStudentKnowledge</h2>
            <div class="form__container">
                <div class="form-group">
                    <label asp-for="FirstName"></label><br />
                    <input class="form-control" placeholder="@Model.FirstName" asp-for="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label><br />
                    <input class="form-control" placeholder="@Model.LastName" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label><br />
                    <input class="form-control" placeholder="@Model.Email" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <input class="form__button" type="submit" value="Save changes" />
                </div>
            </div>
        </div>
    </form>
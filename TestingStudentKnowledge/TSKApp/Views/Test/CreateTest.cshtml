@using TSKApp.PL.Models
@model TestEditModel

<div class="d-flex justify-content-center" style="margin-top: 100px;">
    <div class="card" style="width: 500px">
        <div class="card-body">
            <form asp-action="CreateTest" method="post">
                <div>
                    <div>
                        <div>
                            <label class="form-check-label">Title</label>
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Input title" })
                        </div>
                        <div>
                            <div class="d-flex" style="margin-top: 20px;">
                                <span>Limit:&nbsp;</span>@Html.TextBoxFor(model => model.TimeStamp, new { @class = "form-control", placeholder = "number" })&nbsp;*min
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mt-3">
                            <div>
                                <button class="btn btn-success" type="submit">Create</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@using TSKApp.PL.Models
@model List<TestViewModel>

<div class="d-flex justify-content-between">
    <div id="ShowModalHere"></div>
    <div>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <div class="d-flex">
                    <a class="d-flex" asp-action="TestPassing" asp-route-testId=@item.Id style="margin-right: 30px"><p>#@item.Id |</p>&nbsp;<p>@item.Name</p></a>
                    <div>
                        <button class="btn btn-warning" data-toggle="ajax-modal" data-target="#allowStudent" data-url="/Allow/@item.Id">Allow</button>
                    </div>
                </div>
            }
        }
        else
        {
            <div style="margin-top: 150px;">
                <span><b>Tests is empty</b></span>
            </div>
        }
    </div>
    <div>
        <a class="btn btn-success" href="/Test/CreateTest">Create</a>
    </div>
</div>

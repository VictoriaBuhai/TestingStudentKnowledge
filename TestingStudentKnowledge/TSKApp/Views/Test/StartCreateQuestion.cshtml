@using static TSKApp.Enums.Helpers 
@using TSKApp.PL.Models
@model QuestionEditModel

<div class="d-flex justify-content-center">
    <div class="card" style="width: 500px">
        <div class="card-body">
            <div>
                <form asp-controller="Test" asp-action="StartCreateQuestion" method="post">
                    <input type="hidden" name="testId" value=@ViewBag.testId style="margin-bottom: 20px;" />
                    <div style="margin-bottom: 20px;">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Input question" })
                    </div>
                    <div>
                        @{ int AnswerInputs = Model.AnswerEditModels != null ? Model.AnswerEditModels.Count : 1; }
                        @foreach (var item in Enumerable.Range(0, AnswerInputs))
                        {
                            <div style="margin-bottom: 10px">
                                <div>
                                    <div class="d-flex">
                                        @Html.CheckBoxFor(model => model.AnswerEditModels[item].Correct, new { value = "true", style = "margin-right: 5px;" })
                                        @Html.TextBoxFor(model => model.AnswerEditModels[item].Name, new { @class = "form-control", placeholder = "Input answer" })
                                    </div>
                                    <div class="d-flex flex-row-reverse">
                                        <div>
                                            <button class="btn btn-danger btn-sm" type="submit" style="width: 35px;" asp-route-actionType=@Actions.RemoveAnswer asp-route-removingAnswerId=@item style="margin-top: 10px">-</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div>
                        <div class="d-flex flex-xl-row-reverse">
                            <div>
                                <button class="btn btn-success btn-sm" type="submit" style="width: 35px;" asp-route-actionType=@Actions.MoreAnswer style="margin-top: 10px;">+A</button>
                            </div>
                            <div class="d-flex flex-row-reverse">
                                <button class="btn btn-success btn-sm" type="submit" style="width: 35px;" asp-route-actionType=@Actions.MoreQuestion style="margin-top: 10px;">+Q</button>
                            </div>
                        </divclass="d-flex">
                    </div>
                    <div style="margin-top: 15px">
                        <button class="btn btn-primary" type="submit" style="width: 458px;" asp-route-actionType=@Actions.End>Finish</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>